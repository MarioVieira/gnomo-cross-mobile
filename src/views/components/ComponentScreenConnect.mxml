<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="ParentUnit">
	<fx:Script>
		<![CDATA[
			import uk.co.baremedia.gnomo.enums.EnumsLanguage;
			import uk.co.baremedia.gnomo.models.Locale;
			import uk.co.baremedia.gnomo.presentation.PresentationScreenConnect;
			import uk.co.baremedia.gnomo.utils.UtilsResources;
			[Bindable] public var presentationModel:PresentationScreenConnect;
		]]>
	</fx:Script>
	
	<s:Scroller width="100%" height="100%" verticalScrollPolicy="on">
		
		<s:Group width="100%" height="100%">
			<!--<s:layout>
				<s:MultiDPIVerticalLayout 
					sourceDPI="160"
					paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10"/>
			</s:layout>-->
			
			<s:TextArea
				height="400"
				editable="false"
				text="{ Locale.screenConnectTextMessage }"/>
			
			<s:Button
				label="{ Locale.screenConnectButtonConnect }"
				click="{ presentationModel.connect(); }"/>
			
			<s:Button
				label="{ Locale.buttonBack }"
				click="{ presentationModel.requestScreenModes(); }"/>
			
		</s:Group>
	</s:Scroller>
	
	<s:actionContent>
	
		<s:Button 
			label="{ UtilsResources.getKey(EnumsLanguage.INSTRUCTIONS_BUTTON) }" 
			click="navigator.pushView(ComponentScreenConnect)" />
		
	</s:actionContent>

	
</s:View>
