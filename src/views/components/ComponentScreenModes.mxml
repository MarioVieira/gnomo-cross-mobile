<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		title="{ UtilsResources.getKey(EnumsLanguage.INFO) }">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import assets.Images;
			
			import uk.co.baremedia.gnomo.enums.EnumsLanguage;
			import uk.co.baremedia.gnomo.models.Locale;
			import uk.co.baremedia.gnomo.presentation.PresentationScreenModes;
			import uk.co.baremedia.gnomo.utils.UtilsResources;
			
			[Bindable] public var presentationModel:PresentationScreenModes;
		]]>
	</fx:Script>
	
	
	<s:Scroller width="100%" height="100%" verticalScrollPolicy="on">
		
		<s:Group width="100%" height="100%">
			
			<s:layout>
				<s:MultiDPIVerticalLayout 
					sourceDPI="160"
					paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10"/>
			</s:layout>	
			
			<s:TextArea
				borderVisible="false" 
				contentBackgroundAlpha="0" 
				width="100%" 
				editable="false" 
				selectable="false"
				
				text="{ UtilsResources.getKey(EnumsLanguage.WIRELESS_FUNCTIONALITY) }" />
			
			<s:Button
				height="70%" 
				label="{ UtilsResources.getKey(EnumsLanguage.CONNECT) }"
				click="presentationModel.changeConnectedMode(true);" />
			
		</s:Group>
	</s:Scroller>
	
	<s:actionContent>
		
		<s:Button 
			label="{ UtilsResources.getKey(EnumsLanguage.INSTRUCTIONS_BUTTON) }" 
			click="navigator.pushView(ComponentScreenConnect)"/>
		
	</s:actionContent>
	
</s:View>
