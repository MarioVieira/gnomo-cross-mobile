<?xml version="1.0" encoding="utf-8"?>
<s:ListFormItemRenderer 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:s="library://ns.adobe.com/flex/spark"
	
	styleName="listFormItemRenderer">
	<fx:Script>
		<![CDATA[
			import assets.Images;
			
			import uk.co.baremedia.gnomo.enums.EnumsLanguage;
			import uk.co.baremedia.gnomo.utils.UtilsDate;
			import uk.co.baremedia.gnomo.utils.UtilsResources;
			import uk.co.baremedia.gnomo.utils.UtilsStaticUIInfo;
			import uk.co.baremedia.gnomo.vo.VOLog;
			
			import views.components.ComponentLogs;
		]]>
	</fx:Script>
	
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		
		@media (os-platform: "IOS")
		{
			.listFormItemRenderer
			{
				borderStyle: rounded;
				cornerRadius: 10;
			}
			
			.listForm #titleDisplay
			{
				backgroundAlpha: 0;
				color: #4C566C;
				fontSize: 18;
			}
		}
		
	</fx:Style>
	
	<s:HGroup 
		width="100%"
		height="100%"
		verticalAlign="middle">
		
		<!--
		<s:layout>
		<s:BasicLayout/>
		</s:layout>
		
		-->		
		
		<s:VGroup
			id="vBox"
			paddingTop="{ vBox.height / 2 - date.height / 2 }"
			height="100%">
			
			<s:Label
				id="date"
				
				text="{ UtilsDate.getReabeableDateAndTime(data.dateAndTime) }"
				depth="10">
				
			<!--	<s:postLayoutTransformOffsets>
					
					<s:TransformOffsets
						y="{ vBox.height / 2 - date.height / 2 }"/>
					
				</s:postLayoutTransformOffsets>
				-->
					
				
				</s:Label>
			
		</s:VGroup>
		
		<s:VGroup
			id="vBox2"
			paddingTop="{ vBox2.height / 2 - image.height / 2 }"
			height="100%">
			
			
			<s:Image
				id="image"
				source="{ Images.removeListIcon }"
				visible="{ UtilsStaticUIInfo.logsShowEditButton }"
				includeInLayout="{ UtilsStaticUIInfo.logsShowEditButton }"
				click="ComponentLogs(parentDocument).presentationModel.removeLog(data as VOLog)"
				
				showEffect="Fade"
				hideEffect="Fade"/>
			
		</s:VGroup>
		
		
	</s:HGroup>
	
	<fx:Declarations>
		
		
	</fx:Declarations>
	
	
</s:ListFormItemRenderer>